<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_5dp"
    android:layout_gravity="center">

    <com.crimson.picshu.utils.MyTextView
        android:id="@+id/etPhoneChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:padding="16dp"
        android:text="@string/versio_check_text"
        android:textSize="18sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="25dp"
        android:layout_below="@id/etPhoneChange"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="@dimen/dimen_120dp"
                android:layout_height="@dimen/dimen_35dp"
                android:elevation="@dimen/dimen_1dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:background="@drawable/bg_rounded_white_for_dialog"
                android:onClick="onClick"
                android:text="Update"
                android:textSize="@dimen/dimen_15sp"
                android:textColor="#5DBCD2"
                android:textStyle="bold" />
    </LinearLayout>



</RelativeLayout>